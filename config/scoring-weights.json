{
  "version": "2.0.0",
  "description": "Box scoring weights for prioritization and context injection",

  "base_scores": {
    "Reflection": 90,
    "Warning": 90,
    "Pushback": 85,
    "Assumption": 80,
    "Choice": 70,
    "Completion": 70,
    "Concern": 65,
    "Confidence": 60,
    "Decision": 55,
    "Sycophancy": 50,
    "Suggestion": 45,
    "Quality": 40,
    "FollowUps": 35
  },

  "type_multipliers": {
    "Reflection": {
      "references_correction": 20
    },
    "Assumption": {
      "user_corrected": 30,
      "routine": -20
    },
    "Choice": {
      "user_chose_differently": 25
    },
    "Completion": {
      "has_gaps": 20,
      "has_improvements": 15
    },
    "Confidence": {
      "was_wrong": 30
    },
    "Sycophancy": {
      "rating_below_7": 40
    },
    "Concern": {
      "later_validated": 20
    },
    "Decision": {
      "affected_outcome": 15
    },
    "Suggestion": {
      "user_adopted": 25
    },
    "Quality": {
      "rating_below_7": 20
    }
  },

  "context_multipliers": {
    "same_repository": 1.5,
    "last_7_days": 1.3,
    "last_30_days": 1.1,
    "has_user_followup": 1.4,
    "part_of_correction_sequence": 1.6
  },

  "recency_decay": {
    "enabled": true,
    "half_life_days": 90,
    "min_multiplier": 0.5
  },

  "thresholds": {
    "index_minimum_score": 60,
    "inject_minimum_score": 70,
    "prune_below_score": 30,
    "prune_older_than_days": 90
  }
}
